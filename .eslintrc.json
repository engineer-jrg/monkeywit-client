{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "import-helpers"
  ],
  "rules": {
    "no-console": "off",
    "camelcase": ["error", {
      "allow": ["^UNSAFE_"]
    }],
    "react/jsx-props-no-spreading": ["error", {
      "custom": "ignore"
    }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack/webpack.config.js"
      }
    }
  }
}